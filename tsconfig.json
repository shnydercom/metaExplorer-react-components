{
  "compilerOptions": {  
    "baseUrl": "./src",
    "jsx": "react", 
    "strict": false,

    "outDir": "./lib/",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "suppressExcessPropertyErrors": true,
    "declaration": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "paths": {
      "react": ["node_modules/@types/react"]
    },
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "doc",
    "node_modules",
    "**/**.story.tsx",
    "src/examples",
    "dist",
    "scripts",
    "webpack",
    "tooling"
  ],
  "awesomeTypescriptLoaderOptions": {
    "compilerOptions": {
      "declaration": false,
      "types": ["node", "gapi", "gapi.auth2"],
    },
    "exclude": [
      "node_modules",
      "public/js",
      "scripts",
      "tooling"
    ]
  }
}